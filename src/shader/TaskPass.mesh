#version 460
#extension GL_EXT_mesh_shader : require

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;
layout(triangles) out;
layout(max_vertices = 3, max_primitives = 1) out;

// MUST match the struct in the Task shader exactly
struct TaskPayload {
    uint chunkID;
    vec3 offset;
};

// Read-only input from Task Shader
taskPayloadSharedEXT TaskPayload payload;

layout(location = 0) out PerVertex {
    vec3 color;
} outVertices[];

void main() {
    SetMeshOutputsEXT(3, 1);

    // Example: Use payload data to modify position
    vec3 posOffset = payload.offset; 

    gl_MeshVerticesEXT[0].gl_Position = vec4(vec3(-1, -1, 0) + posOffset, 1.0);
    gl_MeshVerticesEXT[1].gl_Position = vec4(vec3( 3, -1, 0) + posOffset, 1.0);
    gl_MeshVerticesEXT[2].gl_Position = vec4(vec3(-1,  3, 0) + posOffset, 1.0);
    
    outVertices[0].color = vec3(1.0, 0.0, 0.0);
    outVertices[1].color = vec3(0.0, 1.0, 0.0);
    outVertices[2].color = vec3(0.0, 0.0, 1.0);

    gl_PrimitiveTriangleIndicesEXT[0] = uvec3(0, 1, 2);
}